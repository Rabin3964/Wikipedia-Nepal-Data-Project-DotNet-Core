@model WikiNepalData.Model.NepalDataModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Paragraph)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paragraph)
        </dd>

        <dd>

            @if (Model.Image == null)
            {
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/9b/Flag_of_Nepal.svg/492px-Flag_of_Nepal.svg.png" alt="Alternate Text" style="height:200px" />
            }
            else
            {
                <img src="@Url.Content(Model.Image)" alt="Alternate Text" style="height: 200px" />
            }

        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a> 
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>
